{
    "name": "Deskcal",
    "productName": "Deskcal",
    "desktopName": "Deskcal",
    "version": "0.0.1",
    "description": "An unofficial cross-platform desktop Google Calendar application",
    "main": "app.js",
    "repository": "https://github.com/",
    "keywords": [],
    "author": "cognophile",
    "license": "MIT",
    "files": [
        "app.js",
        "resources/icon.png"
    ],
    "scripts": {
        "start": "electron .",
        "build": "npm run build:macos && npm run build:linux && npm run build:windows",
        "build:macos": "electron-packager . --overwrite --asar --out=dist --ignore='^media$' --prune --platform=darwin --arch=x64 --icon=resources/icon.icns --app-bundle-id=com.cognophile.deskcal --osx-sign=true --app-version=$npm_package_version && cd dist/Deskcal-darwin-x64 && zip -ryXq9 ../Deskcal-osx-${npm_package_version}.zip Deskcal.app",
        "build:linux": "electron-packager . --overwrite --out=dist --ignore='^media$' --prune --platform=linux --arch=x64 --icon=resources/icon.png --app-bundle-id=com.cognophile.deskcal --app-version=$npm_package_version && cd dist/Deskcal-linux-x64/ && zip -ryq9 ../Deskcal-${npm_package_version}.zip *",
        "build:windows": "electron-packager . --overwrite --asar --out=dist --ignore='^media$' --prune --platform=win32 --arch=ia32 --icon=resources/icon.ico --version-string.ProductName=$npm_package_productName --app-version=$npm_package_version && cd dist/Deskcal-win32-ia32 && zip -ryq9 ../Deskcal-windows-${npm_package_version}.zip *"
    },
    "devDependencies": {
        "electron": "^1.7.9",
        "electron-builder": "^22.3.2",
        "electron-packager": "^14.2.1"
    }
}
